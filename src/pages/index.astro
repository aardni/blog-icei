---
import Layout from "../layouts/Layout.astro";
import SearchBar from "../components/SearchBar";
import "../../src/styles/global.css";
import { getCollection } from "astro:content";

// Ambil semua posts dari content collection
const posts = await getCollection("blog");

// Sort by date (terbaru dulu)
posts.sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);
---

<Layout>
  <div class="bg-white py-8 sm:py-12 lg:py-16">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl lg:mx-0">
        <h2
          class="text-4xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-5xl"
        >
          Blog
        </h2>
        <p class="mt-2 text-lg/8 text-gray-600">
          Learn how to grow your business with our expert advice.
        </p>
      </div>

      <div class="mt-10 sm:mt-8">
        <!-- Search Bar (client-side React) -->
        <SearchBar client:load />

        <!-- Posts Grid (server-side Astro) -->
        <div
          class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 border-t border-gray-200 pt-10 sm:pt-8 lg:mx-0 lg:max-w-none lg:grid-cols-3"
        >
          {
            posts.map((post) => (
              <a
                href={`/blog/${post.slug}`}
                class="group block"
                data-post
                data-title={post.data.title}
                data-description={post.data.description}
                data-category={post.data.category || ""}
                data-author={post.data.author || ""}
              >
                <article class="flex max-w-xl flex-col items-start justify-between">
                  <div class="relative w-full overflow-hidden rounded-xl">
                    <img
                      class="h-60 w-full object-cover transition-transform duration-300 group-hover:scale-105"
                      src={post.data.image || "/images/collectetri.jpg"}
                      alt={post.data.title}
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300" />
                  </div>
                  <div class="flex items-center gap-x-4 text-xs mt-4">
                    <time datetime={post.data.date} class="text-gray-500">
                      {new Date(post.data.date).toLocaleDateString("id-ID", {
                        year: "numeric",
                        month: "short",
                        day: "numeric",
                      })}
                    </time>
                    <span class="rounded-full bg-blue-50 px-3 py-1.5 font-medium text-blue-600">
                      {post.data.category || "Blog"}
                    </span>
                    {post.data.readingTime && (
                      <span class="text-gray-500">{post.data.readingTime}</span>
                    )}
                  </div>
                  <div class="grow">
                    <h3 class="mt-3 text-lg/6 font-semibold text-gray-900 group-hover:text-blue-600 transition-colors">
                      {post.data.title}
                    </h3>
                    <p class="mt-3 line-clamp-2 text-sm/6 text-gray-600">
                      {post.data.description}
                    </p>
                  </div>
                  {post.data.tags && post.data.tags.length > 0 && (
                    <div class="mt-4 flex flex-wrap gap-2">
                      {post.data.tags.slice(0, 3).map((tag: string) => (
                        <span class="text-xs text-gray-500">#{tag}</span>
                      ))}
                    </div>
                  )}
                  <div class="mt-6 flex items-center gap-x-4">
                    <img
                      src={post.data.authorImage || "https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=150&h=150&fit=crop&crop=face"}
                      alt={post.data.author || "Author"}
                      class="size-10 rounded-full bg-gray-50 object-cover ring-2 ring-gray-100"
                    />
                    <div class="text-sm/6">
                      <p class="font-semibold text-gray-900">
                        {post.data.author || "Anonymous"}
                      </p>
                      <p class="text-gray-500 text-xs">{post.data.authorRole || "Author"}</p>
                    </div>
                  </div>
                </article>
              </a>
            ))
          }

          <!-- No Results Message -->
          <div id="no-results" class="col-span-3 text-center py-12" style="display: none;">
            <svg
              class="mx-auto h-12 w-12 text-gray-400"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
              />
            </svg>
            <h3 class="mt-2 text-sm font-semibold text-gray-900">No posts found</h3>
            <p class="mt-1 text-sm text-gray-500">
              Try adjusting your search query.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
