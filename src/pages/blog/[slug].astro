---
import Layout from "../../layouts/Layout.astro";
import "../../styles/global.css";
import { getCollection, render } from "astro:content";

const { slug } = Astro.params;

const posts = await getCollection("blog");
const post = posts.find((p) => p.slug === slug);

if (!post) {
  return Astro.redirect("/404");
}

const { Content } = await render(post);

// Format date
const formattedDate = new Date(post.data.date).toLocaleDateString("id-ID", {
  year: "numeric",
  month: "long",
  day: "numeric",
});

// Default values
const authorImage = post.data.authorImage || "https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=150&h=150&fit=crop&crop=face";
const authorRole = post.data.authorRole || "Author";
const coverImage = post.data.image || "/images/collectetri.jpg";
const readingTime = post.data.readingTime || "5 min read";
const tags = post.data.tags || [];
---

<Layout>
  <article class="bg-white">
    <!-- Hero Section -->
    <div class="relative w-full h-[400px] md:h-[500px] overflow-hidden">
      <img
        src={coverImage}
        alt={post.data.title}
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/30 to-transparent"></div>

      <!-- Category Badge -->
      <div class="absolute top-6 left-6">
        <span class="inline-flex items-center rounded-full bg-blue-600 px-4 py-1.5 text-sm font-medium text-white shadow-lg">
          {post.data.category || "Blog"}
        </span>
      </div>
    </div>

    <!-- Content Container -->
    <div class="relative mx-auto max-w-4xl px-6 lg:px-8">
      <!-- Title Card (overlapping hero) -->
      <div class="relative -mt-32 mb-8 rounded-2xl bg-white p-8 shadow-xl">
        <!-- Meta info -->
        <div class="flex flex-wrap items-center gap-4 text-sm text-gray-500 mb-4">
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <time datetime={post.data.date}>{formattedDate}</time>
          </div>
          <span class="text-gray-300">â€¢</span>
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>{readingTime}</span>
          </div>
        </div>

        <!-- Title -->
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold tracking-tight text-gray-900 leading-tight">
          {post.data.title}
        </h1>

        <!-- Description -->
        <p class="mt-4 text-lg text-gray-600 leading-relaxed">
          {post.data.description}
        </p>

        <!-- Tags -->
        {tags.length > 0 && (
          <div class="mt-6 flex flex-wrap gap-2">
            {tags.map((tag: string) => (
              <span class="inline-flex items-center rounded-full bg-gray-100 px-3 py-1 text-sm font-medium text-gray-700 hover:bg-gray-200 transition-colors">
                #{tag}
              </span>
            ))}
          </div>
        )}

        <!-- Author Card -->
        <div class="mt-8 pt-6 border-t border-gray-100">
          <div class="flex items-center gap-4">
            <img
              src={authorImage}
              alt={post.data.author || "Author"}
              class="w-14 h-14 rounded-full object-cover ring-2 ring-gray-100"
            />
            <div>
              <p class="font-semibold text-gray-900">
                {post.data.author || "Anonymous"}
              </p>
              <p class="text-sm text-gray-500">{authorRole}</p>
            </div>
            <div class="ml-auto flex gap-2">
              <button class="p-2 rounded-full hover:bg-gray-100 transition-colors" title="Share on Twitter">
                <svg class="w-5 h-5 text-gray-500" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              </button>
              <button class="p-2 rounded-full hover:bg-gray-100 transition-colors" title="Share on LinkedIn">
                <svg class="w-5 h-5 text-gray-500" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </button>
              <button class="p-2 rounded-full hover:bg-gray-100 transition-colors" title="Copy link">
                <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                </svg>
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Article Content -->
      <div class="pb-16">
        <article class="prose prose-lg max-w-none prose-headings:font-bold prose-headings:tracking-tight prose-a:text-blue-600 prose-a:no-underline hover:prose-a:underline prose-img:rounded-xl prose-pre:bg-gray-900 prose-pre:text-gray-100">
          <Content />
        </article>
      </div>

      <!-- Bottom Author Card -->
      <div class="border-t border-gray-200 py-10 mb-10">
        <div class="flex items-start gap-6">
          <img
            src={authorImage}
            alt={post.data.author || "Author"}
            class="w-20 h-20 rounded-full object-cover ring-4 ring-gray-100"
          />
          <div class="flex-1">
            <p class="text-sm text-gray-500 uppercase tracking-wider mb-1">Written by</p>
            <p class="text-xl font-bold text-gray-900 mb-1">
              {post.data.author || "Anonymous"}
            </p>
            <p class="text-gray-600 mb-3">{authorRole}</p>
            <p class="text-gray-500 text-sm">
              Passionate about technology and sharing knowledge with the developer community.
            </p>
          </div>
        </div>
      </div>

      <!-- Back to Blog -->
      <div class="pb-16">
        <a
          href="/"
          class="inline-flex items-center gap-2 text-blue-600 hover:text-blue-800 font-medium transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to all posts
        </a>
      </div>
    </div>
  </article>
</Layout>
